<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- PIN admin -->
    <EditTextPreference
        android:key="adminPin"
        android:title="Admin PIN"
        android:dialogTitle="Ubah PIN Admin"
        android:inputType="numberPassword"
        android:defaultValue="2580"
        app:useSimpleSummaryProvider="true" />
        
    <!-- contoh entri; biarkan entri lain tetap, yang penting ganti atribut -->
    <EditTextPreference
        android:key="bleServiceUuid"
        android:title="BLE Service UUID"
        android:dialogTitle="BLE Service UUID"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:key="bleCharUuid"
        android:title="BLE Characteristic UUID"
        android:dialogTitle="BLE Characteristic UUID"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:key="debounceMs"
        android:title="Debounce (ms)"
        android:dialogTitle="Debounce (ms)"
        android:inputType="number"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:key="minActiveMs"
        android:title="Min Active (ms)"
        android:dialogTitle="Min Active (ms)"
        android:inputType="number"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:key="minIdleMs"
        android:title="Min Idle (ms)"
        android:dialogTitle="Min Idle (ms)"
        android:inputType="number"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:key="server_url"
        android:title="Server URL"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        android:key="env"
        android:title="Environment"
        app:useSimpleSummaryProvider="true" />
    <!-- â€¦lanjutkan item lain; cukup pastikan semua pakai app:useSimpleSummaryProvider -->
</PreferenceScreen>
