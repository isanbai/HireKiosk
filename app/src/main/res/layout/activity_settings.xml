<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp">

    <!-- Section Ubah PIN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etNewPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="PIN baru (4â€“8 digit)" />

        <EditText
            android:id="@+id/etNewPin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="Ulangi PIN" />

        <Button
            android:id="@+id/btnSavePin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan PIN" />
    </LinearLayout>

    <!-- Divider kecil -->
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <!-- Container preference fragment -->
    <FrameLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
